<h2>新增 User</h2>
<br />

<form method="post" action="/Home/CreateUser">
    <div class="form-group row">
        <label for="inputname" class="col-sm-2">名稱</label>
        <div class="col-sm-10">
            <input type="text" id="inputname" name="name" class="form-control" />
        </div>
    </div>
    <div class="form-group row">
        <label for="inputemail" class="col-sm-2">電子郵件</label>
        <div class="col-sm-10">
            <input type="text" id="inputemail" name="email" class="form-control" />
        </div>
    </div>
    <div class="form-group row">
        <label for="inputpassword" class="col-sm-2">密碼</label>
        <div class="col-sm-10">
            <input type="number" id="inputpassword" name="password" class="form-control" />
        </div>
    </div>
    <input class="btn btn-default" type="submit" value="新增" />
</form>