<h2>新增 User</h2>
<br />

<form method="post" action="/Home/CreateUser">
    <div class="form-group row">
        <label for="inputname" class="col-sm-2">狀態</label>
        <div class="col-sm-10">
            <input type="text" id="inputname" name="state" class="form-control" />
        </div>
    </div>
    <div class="form-group row">
        <label for="inputemail" class="col-sm-2">溫度</label>
        <div class="col-sm-10">
            <input type="number" step=".01"  id="inputemail" onchange="(function(el){el.value=parseFloat(el.value).toFixed(1);})(this)" name="temperature" class="form-control" />
        </div>
    </div>
    <div class="form-group row">
        <label for="inputpassword" class="col-sm-2">時間</label>
        <div class="col-sm-10">
            <input type="text" id="inputpassword" name="time" class="form-control" />
        </div>
    </div>
    <input class="btn btn-default" type="submit" value="新增" />
</form>

@section Scripts {
    @Scripts.Render("~/bundles/bootstrap")
}