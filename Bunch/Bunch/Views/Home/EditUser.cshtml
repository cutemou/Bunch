@model Bunch.Models.Test

<h2>修改User</h2>
<br />

<form action="/Home/EditUser" method="post">
    <div class="form-group row">
        <label for="inputid" class="col-sm-2">編碼</label>
        <div class="col-sm-10">
            <input type="text" id="inputid" name="id" class="form-control" value="@Model.id" readonly />
        </div>
    </div>
    <div class="form-group row">
        <label for="inputname" class="col-sm-2">狀態</label>
        <div class="col-sm-10">
            <input type="text" id="inputname" name="state" class="form-control" value="@Model.state" />
        </div>
    </div>
    <div class="form-group row">
        <label for="inputemail" class="col-sm-2">溫度</label>
        <div class="col-sm-10">
            <input type="number" step=".01" id="inputemail" name="temperature" class="form-control" value="@Model.temperature" />
        </div>
    </div>
    <div class="form-group row">
        <label for="inputpassword" class="col-sm-2">時間</label>
        <div class="col-sm-10">
            <input type="text" id="inputpassword" name="time" class="form-control" value="@Model.time" />
        </div>
    </div>
    <input class="btn btn-default" type="submit" value="儲存" />
</form>

