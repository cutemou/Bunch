@model Bunch.Models.User

<h2>修改User</h2>
<br />

<form action="/Home/EditUser" method="post">
    <div class="form-group row">
        <label for="inputid" class="col-sm-2">編碼</label>
        <div class="col-sm-10">
            <input type="text" id="inputid" name="id" class="form-control" value="@Model.id" readonly />
        </div>
    </div>
    <div class="form-group row">
        <label for="inputname" class="col-sm-2">名稱</label>
        <div class="col-sm-10">
            <input type="text" id="inputname" name="name" class="form-control" value="@Model.name" />
        </div>
    </div>
    <div class="form-group row">
        <label for="inputemail" class="col-sm-2">電子郵件</label>
        <div class="col-sm-10">
            <input type="text" id="inputemail" name="email" class="form-control" value="@Model.email" />
        </div>
    </div>
    <div class="form-group row">
        <label for="inputpassword" class="col-sm-2">密碼</label>
        <div class="col-sm-10">
            <input type="text" id="inputpassword" name="password" class="form-control" value="@Model.password" />
        </div>
    </div>
    <input class="btn btn-default" type="submit" value="儲存" />
</form>

